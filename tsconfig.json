{
    "compilerOptions": {
        "target": "ES5",

        "baseUrl": ".",
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": ".",
        "outDir": "dist",
        "paths": {
            "@/*": ["src/*"]
        },
        "resolveJsonModule": true,

        // JS Support
        "allowJs": false,

        // Emit
        "noEmit": true,
        "sourceMap": true,

        // Interop Constraints
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        // Type Checking
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,

        // JSX
        "jsx": "react-jsx",
        "jsxImportSource": "react"
    },

"include": ["src"],
"exclude": ["dist", "node_modules", "prod"],
"references": [{ "path": "./tsconfig.node.json"}]
}